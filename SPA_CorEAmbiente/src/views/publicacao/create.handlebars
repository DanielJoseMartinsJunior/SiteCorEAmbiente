{{!-- create.handlebars --}}

{{!-- Seção de conteúdo da página --}}
<div class="container mt-4 w-80">
    <h1 class="mb-4">Criar Publicação</h1>
    <form id="createPublicacaoForm" enctype="multipart/form-data" method="post">
        <div class="form-group mb-3">
            <label for="createTitulo">Título</label>
            <input type="text" class="form-control" id="createTitulo" name="titulo" required>
        </div>

        <div class="form-group mb-3">
            <label for="createConteudo">Conteúdo</label>
            <textarea class="form-control" id="createConteudo" name="conteudo" rows="5" required></textarea>
        </div>

        <div class="form-group mb-3">
            <label for="createImagemPrincipal">Imagem Principal</label>
            <input type="file" class="form-control-file" id="createImagemPrincipal" name="imagem_principal" required>
        </div>

        <div class="form-group mb-3">
            <label for="createImagensInternas">Imagens Internas</label>
            <input type="file" class="form-control-file" id="createImagensInternas" name="imagens_internas" multiple>
        </div>

        <a href="../publicacoes/" class="btn btn-secondary" id="cancelCreatePublicacao"><i class="bi bi-x-circle"></i> Cancelar</a>
        <button type="button" class="btn btn-primary" id="saveCreatePublicacao" onclick="CreatePublicacaoClick(event)"><i class="bi bi-check-circle"></i> Salvar</button>
    </form>
</div>

<!-- Scripts do formulário publicacao -->
<script src="../js/publicacaoScripts.js"></script>
