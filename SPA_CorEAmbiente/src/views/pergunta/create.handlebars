{{!-- create.handlebars --}}

{{!-- Seção  trabalho de conteúdo da página --}}
<div class="container mt-4 w-80">
    <h1 class="mb-4">Criar Pergunta</h1>
    <form id="createPerguntasForm" enctype="multipart/form-data" method="post">
        <div class="form-group mb-3">
            <label for="createTitulo">Título</label>
            <input type="text" class="form-control" id="createTitulo" name="titulo" value="{{pergunta.titulo}}" required>
        </div>
         <div class="form-group mb-3">
            <label for="createResposta">Resposta</label>
            <input type="text" class="form-control" id="createResposta" name="resposta" value="{{pergunta.resposta}}" required>
        </div>
          <div class="form-group mb-2">
                            <label for="createOrdem">Ordem</label>
                            <input type="number" class="form-control" id="createOrdem" name="ordem" required>
                        </div>
        
        <!-- Campo oculto para armazenar o ID trabalho da publicacao -->
        <input type="hidden" id="createPerguntaId" name="id" value="{{pergunta.id}}">
        <a href="../perguntas/" class="btn btn-secondary" id="cancelCreatePergunta"><i class="bi bi-x-circle"></i> Cancelar</a>
        <button type="button" class="btn btn-primary" id="saveCreatePergunta" onclick="CreatePerguntasClick(event)"><i class="bi bi-check-circle"></i> Salvar</button>
    </form>
</div>
<!-- Scripts do formulário publicacao ergunta -->
<script src="../js/perguntasScripts.js"></script>
