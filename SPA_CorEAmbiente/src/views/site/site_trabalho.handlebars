<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
    <!-- JS personalizado -->
    <script src="../js/script.js"></script>

    <!-- FontAwesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css"
        crossorigin="anonymous" referrerpolicy="no-referrer" />
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Lato:wght@100;300;400;700;900&display=swap" rel="stylesheet">
    <!-- CSS personalizado -->
    <link rel="stylesheet" href="css/styles.css">
    <link rel="stylesheet" href="css/site_trabalhos_styles.css">
    <link rel="stylesheet" href="css/header.css">
    <!-- Favicon -->
    <link rel="shortcut icon" href="../img/favicon.png">
    <title>Document</title>
</head>
<body>
    <header id="home">
        <nav id="navbar">
            <div id="navbar-logo">
                <img src="img/Logo-CoreAmbiente_Prancheta 1 co¦üpia.png" alt="logo Cor e Ambiente" id="nav-logo">
            </div>
            <div id="nav-pages">
                <ul id="nav-list">
                    <li class="nav-item active">
                        <a href="#home">Início</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a href="#">Produtos</a>
                        <ul class="dropdown-menu">
                            <li class="nav-item">
                                <a href="#cortinas">Cortinas</a>
                            </li>
                            <li class="nav-item">
                                <a href="#persianas">Persianas</a>
                            </li>
                            <li class="nav-item">
                                <a href="#decoracoes">Decorações</a>
                            </li>
                        </ul>
                    </li>
                    <li class="nav-item">
                        <a href="#nossosTrabalhos">Nossos Trabalhos</a>
                    </li>
                    <li class="nav-item">
                        <a href="/site_publicacoes/">Publicações</a>
                    </li>
                    <li class="nav-item">
                        <a href="#contact">Contato</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a href="#contact">Mais</a>
                        <ul class="dropdown-menu">
                            <li class="nav-item">
                                <a href="#about">Sobre Nós</a>
                            </li>
                            <li class="nav-item">
                                <a href="#faq">Perguntas Frequentes - FAQ</a>
                            </li>
                        </ul>
                    </li>
                </ul>
            </div>
            <button id="mobile-btn">
                <i class="fa-solid fa-bars"></i>
            </button>
        </nav>
        <div id="mobile-menu">
            <ul id="mobile-nav-list">
                <li class="nav-item">
                    <a href="#home">Início</a>
                </li>
                <li class="nav-item">
                    <a href="#cortinas">Cortinas</a>
                </li>
                <li class="nav-item">
                    <a href="#persianas">Persianas</a>
                </li>
                <li class="nav-item">
                    <a href="#decoracoes">Decorações</a>
                </li>
                <li class="nav-item">
                    <a href="#nossosTrabalhos">Nossos Trabalhos</a>
                </li>
                <li class="nav-item">
                    <a href="#publicacoes">Publicações</a>
                </li>
                <li class="nav-item">
                    <a href="#about">Sobre Nós</a>
                </li>
                <li class="nav-item">
                    <a href="#contact">Contato</a>
                </li>
                <li class="nav-item">
                    <a href="#faq">Perguntas Frequentes - FAQ</a>
                </li>
            </ul>
        </div>
    </header>

    <main class="container">
        <h1>Publicações testando</h1>
        <div class="col-md-8 mx-auto" id="trabalhos">
            <h4>Publicações</h4>
            {{#each trabalhos}}
            <hr>
            <div class="card mb-3">
                <div class="row g-0">
                    <div class="col-md-6">
                        <img src="http://localhost:3000/img/trabalhos/{{imagem_principal}}" class="img-fluid rounded-start" alt="{{titulo}}">
                    </div>
                    <div class="col-md-6">
                        <div class="p-3">
                            <h5>{{titulo}}</h5>
                            <div id="banner-imagens-{{@index}}" class="carousel slide" data-bs-ride="carousel">
                                <div class="carousel-inner">
                                    {{#each imagens_internas}}
                                        <div class="carousel-item {{#if @first}}active{{/if}}">
                                            <img src="http://localhost:3000/img/trabalhos/{{this}}" class="d-block w-100 img-thumbnail" alt="Imagem interna" data-bs-toggle="modal" data-bs-target="#modalImagem-{{@../index}}-{{@index}}">
                                        </div>
                                    {{/each}}
                                </div>
                                <button class="carousel-control-prev" type="button" data-bs-target="#banner-imagens-{{@index}}" data-bs-slide="prev">
                                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                    <span class="visually-hidden">Previous</span>
                                </button>
                                <button class="carousel-control-next" type="button" data-bs-target="#banner-imagens-{{@index}}" data-bs-slide="next">
                                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                    <span class="visually-hidden">Next</span>
                                </button>
                            </div>
                            <p>{{descricao}}</p>
                        </div>
                    </div>
                </div>
            </div>

            {{#each imagens_internas}}
            <div class="modal fade" id="modalImagem-{{@../index}}-{{@index}}" tabindex="-1" aria-labelledby="modalLabel-{{@../index}}-{{@index}}" aria-hidden="true">
                <div class="modal-dialog modal-lg">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="modalLabel-{{@../index}}-{{@index}}">Imagem Interna</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <img src="http://localhost:3000/img/trabalhos/{{this}}" class="img-fluid" alt="Imagem interna">
                        </div>
                    </div>
                </div>
            </div>
            {{/each}}
            {{/each}}
        </div>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.7/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
